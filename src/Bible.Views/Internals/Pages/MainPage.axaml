<components:ComponentsBase
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:components="clr-namespace:Bible.Views.Internals.Components;assembly=Bible"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Bible.Views.Internals.Pages.MainPage">
    <Grid
        RowDefinitions="40, *, 30">
        <TextBlock
            Grid.Row="0"
            Background="Red" />

        <ScrollViewer
            Grid.Row="1"
            Background="Orange">
            <TextBlock
                TextWrapping="Wrap" />
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Background="Blue" />
    </Grid>
</components:ComponentsBase>
